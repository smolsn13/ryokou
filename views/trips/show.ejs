  <% trip.businesses.forEach(function(item) { %>
  <div class="row">
    <div class="col s4 offset-s3">
      <p class="biz">
        <a class="bizlink" href="<%= item.url %>"><%= item.name %></a>
        <a class="btn-small waves-effect waves-light blue-grey lighten-2" href="#">Edit</a>
        <a class="delete-link btn-small waves-effect waves-light red lighten-2" href="/trips/<%= trip.id %>/businesses/<%= item.id %>">Delete</a>
      </p>
    </div>
  </div>
  <% }); %>
  <hr />
  <a href="/trips">&larr; Back to My Trips</a>
</div>
