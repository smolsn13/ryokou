<div class="tripcontainer">
  <div class="row">
    <div class="col s6 offset-s5">
      <h1><%= trip.city %></h1>
    </div>
  </div>
  <div class="row">
    <form method="GET" id="main" class="col s8 offset-s3" action="/trips/<%= trip.id %>/businesses">
        <div class="input-field col s8">
          <select id="categoryselect">
            <option value="" disabled selected>Select a category...</option>
            <option value="active, All" id="active">Active/Outdoor</option>
            <option value="arts, All" id="arts">Arts/Entertainment</option>
            <option value="beautysvc, All" id="beauty">Beauty/Spas</option>
            <option value="food, All" id="food">Food</option>
            <option value="hotelstravel, All" id="hotels">Hotels/Travel</option>
            <option value="nightlife, All" id="nightlife">Nightlife</option>
            <option value="restaurants, All" id="restaurants">Restaurants</option>
            <option value="shopping, All" id="shopping">Shopping</option>
          </select>
          <label>What are you looking for on this adventure?</label>
        </div>
    </form>
  </div>
  <div class="row">
    <div class="categories" id="activeform">
      <form action="/trips/<%= trip.id %>/businesses">
          <div class="input-field col s4 offset-s4">
            <select id="activeselect" name="category">
              <option value="" disabled selected>Select a category...</option>
              <option value="amusementparks, All">Amusement Parks</option>
              <option value="aquariums, All">Aquariums</option>
              <option value="bungeejumping, All">Bungee Jumping</option>
              <option value="parks, All">Parks</option>
              <option value="zipline, All">Ziplining</option>
            </select>
            <label>Choose one of the following:</label>
            <input type="hidden" name="location" value="<%= trip.city %>">
          </div>
          <button class="btn waves-effect waves-light offset-s4" type="submit" name="action">Search
            <i class="material-icons right">search</i>
          </button>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="categories" id="artsform">
