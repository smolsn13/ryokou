<h2 id="createaccount">Create your account:</h2>

<div class="row container signup-container col s10">
  <form action="/auth/signup" method="POST">

    <div class="row">
      <div class="col s10 input-field offset-s3">
        <label for="authFirstName">First Name</label>
        <input id="authFirstName" type="text" name="firstName">
      </div>
    </div>
    <div class="row">
      <div class="col s10 input-field offset-s3">
        <label for="authLastName">Last Name</label>
        <input id="authLastName" type="text" name="lastName">
      </div>
    </div>
    <div class="row">
      <div class="col s10 input-field offset-s3">
        <label for="authEmail">Email</label>
        <input id="authEmail" type="email" name="email">
      </div>
    </div>
    <div class="row">
      <div class="col s10 input-field offset-s3">
        <label for="authPassword">Password</label>
        <input id="authPassword" type="password" name="password">
      </div>
    </div>
    <div class="row">
      <div class="input-field col s1 offset-s7">
        <input class="btn btn-primary center-align" type="submit">
      </div>
    </div>
  </form>
</div>
